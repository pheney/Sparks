@model Sparks.Models.ViewModel.VmWargame
<div class="row">
    <div class="col-sm-10"><h4>Cattle Cataclysm</h4>
        <div>@Model.GameType game</div>
        <div><em>@Model.Genre</em></div>
    </div>
</div>
<p />
<div class="row">
    <div class="col-sm-12">
        <div><strong>Factions / Teams</strong></div>
        @foreach (var n in Model.Factions)
        {
            <div><u>@n.Name</u></div>
            <div>@n.Desc</div>
            <p />
        }
        <div><strong>Setting</strong></div>
        <div>@Model.GameSetting.Desc</div>
        <p />
        <div><strong>The Twist</strong></div>
        <div>@Model.Twist</div>
    </div>
</div>